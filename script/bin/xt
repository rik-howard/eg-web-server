#!/bin/bash
##
# $ xt <command> ...
##
W=${W:-212}
H=${H:-16}

case "$1" in
    +)
        xterm -geometry ${W}x${H} -e "
              while true;
              do
                  clear;
                  ${*:2};
                  read;
              done
          " &
          sleep 1
    ;;
    *)
        xterm -geometry ${W}x${H} -e "$* || read -t7 -p?" &
        sleep 1
    ;;
esac
